{
  "name": "emotion-detection-api",
  "version": "1.0.0",
  "description": "Emotion detection API using Cardiff NLP model",
  "runtime": {
    "handler": "main.py",
    "python_version": "3.10"
  },
  "gpu": {
    "enabled": true,
    "min_vram_gb": 4
  },
  "ports": [
    {
      "container_port": 8000,
      "protocol": "http"
    }
  ],
  "environment": {
    "PYTHONUNBUFFERED": "1"
  },
  "healthcheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10
  }
}
